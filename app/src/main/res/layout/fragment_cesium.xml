<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.teamagam.gimelgimel.app.map.viewModel.MapViewModel" />
    </data>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_cesium_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.map.view.ViewerFragment">

        <com.teamagam.gimelgimel.app.map.cesium.CesiumMapView
            android:id="@+id/gg_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hardwareAccelerated="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/locate_me_fab"
                style="@style/fab"
                android:onClick="@{() -> viewModel.zoomToLastKnownLocation()}"
                android:src="@android:drawable/ic_dialog_map" />

            <fragment
                android:id="@+id/send_image_fragment"
                android:name="com.teamagam.gimelgimel.app.message.view.SendImageFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_send_image" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/message_fab"
                style="@style/fab"
                android:onClick="@{() -> viewModel.sendMessageClicked()}"
                android:src="@android:drawable/ic_dialog_email" />
        </LinearLayout>

    </FrameLayout>
</layout>