<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>
    <variable
        name="viewModel"
        type="com.teamagam.gimelgimel.app.dynamic_layer.DynamicLayerDetailsViewModel"
        />
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dynamic_layer_details_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        />
    <TextView
        android:id="@+id/dynamic_layer_details_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@color/white"
        android:text="@{viewModel.details}"
        android:textSize="@dimen/text_size_medium"
        tools:text="אל תדאגי איציק ישמור עליך"
        >
    </TextView>
  </LinearLayout>
</layout>