<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_message_listitem_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_gravity="start">

    <ImageView
        android:id="@+id/message_row_type_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/spacing_normal"
        android:contentDescription="@string/fragment_messages_master_message_type"
        tools:src="@drawable/ic_message_black"
    />

    <TextView
        android:id="@+id/message_row_sender_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/spacing_large"
        tools:text="Title"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/message_row_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:gravity="end"
        tools:text="07/07/2016 10:44"
        android:textAppearance="?attr/textAppearanceListItem"/>

</LinearLayout>
