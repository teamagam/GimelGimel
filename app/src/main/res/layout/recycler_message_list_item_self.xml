<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_message_listitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/whatsapp_messages_spacing"
    android:layout_marginEnd="@dimen/spacing_extra_small"
    android:layout_marginStart="@dimen/spacing_extra_small"
    android:gravity="right"
    >

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/balloon_outgoing_normal"
      >

    <include layout="@layout/recycler_message_list_item_content"/>
  </RelativeLayout>

</RelativeLayout>
