<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <data>

    <variable
        name="viewModel"
        type="com.teamagam.gimelgimel.app.map.viewModel.MeasureActionViewModel"
        />
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/send_geometry_title"
          style="@style/TextAppearance.AppCompat.Large"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/send_geometry_switch_image_size"
            android:layout_height="@dimen/send_geometry_switch_image_size"
            android:padding="@dimen/spacing_small"
            app:srcCompat="@drawable/ic_polyline"
            />

        <Switch
            android:id="@+id/send_geometry_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/send_geometry_switch_image_size"
            android:layout_height="@dimen/send_geometry_switch_image_size"
            android:padding="@dimen/spacing_small"
            app:srcCompat="@drawable/ic_polygon"
            />

        <EditText
            android:id="@+id/send_quadrilateral_description_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/add_description"
            android:maxLines="3"
            android:textSize="@dimen/text_size_medium"
            />
      </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >
      <com.teamagam.gimelgimel.app.map.esri.EsriGGMapView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />

      <android.support.design.widget.FloatingActionButton
          android:id="@+id/fab_action_send_quadrilateral"
          android:layout_gravity="bottom|end"
          android:src="@android:drawable/ic_menu_send"
          style="@style/fab"
          />

    </FrameLayout>

  </LinearLayout>

</layout>