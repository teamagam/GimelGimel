<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/long_lat_picker_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/text_size_large"
        tools:text="Point X" />

    <EditText
        android:id="@+id/long_lat_picker_long"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/horizontal_long_lat_picker_long_hint"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/long_lat_picker_lat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/horizontal_long_lat_picker_lat_hint"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

</LinearLayout>