<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".app.view.fragments.dialogs.ImageDialogFragment"
    android:columnCount="2"
    android:rowCount="5"
    android:useDefaultMargins="true"
    android:layout_gravity="center">

    <!-- Image -->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dialog_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        fresco:fadeDuration="500"
        fresco:actualImageScaleType="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        />

    <!-- Image Date -->
    <TextView
        android:id="@+id/dialog_image_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"/>

    <!-- Latitude Value -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/dialog_go_to_latitude_text"
        android:layout_column="0"
        android:layout_row="2" />
    <TextView
        android:id="@+id/dialog_image_coord_lat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_row="2" />

    <!-- Longitude Value -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/dialog_go_to_longitude_text"
        android:layout_column="0"
        android:layout_row="3" />
    <TextView
        android:id="@+id/dialog_image_coord_lon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_row="3" />

    <!-- Source Type -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/dialog_image_source_type"
        android:layout_column="0"
        android:layout_row="4" />
    <TextView
        android:id="@+id/dialog_image_source_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_row="4" />

</GridLayout>