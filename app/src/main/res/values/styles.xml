<resources>

    <style name="Theme.GimelGimel" parent="Theme.GimelGimel.Base.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.GimelGimel.WithActionBar" parent="Theme.GimelGimel.Base">
    </style>

    <!-- Base application theme. -->
    <style name="Theme.GimelGimel.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.GimelGimel.Base.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ContentText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
