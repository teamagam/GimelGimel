<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".app.view.fragments.dialogs.ImageDialogFragment"
    android:orientation="vertical">

    <!-- Image -->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dialog_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_gravity="center"
        fresco:fadeDuration="500"
        fresco:actualImageScaleType="fitCenter"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true"
        android:layout_gravity="center"
        android:alignmentMode="alignBounds">

        <!-- Image Date -->
        <TextView
            android:id="@+id/dialog_image_date"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"/>

        <!-- Latitude Value -->
        <TextView
            android:text="@string/dialog_go_to_latitude_text"
            android:layout_column="0"
            android:layout_row="1" />
        <TextView
            android:id="@+id/dialog_image_coord_lat"
            android:layout_column="1"
            android:layout_row="1" />

        <!-- Longitude Value -->
        <TextView
            android:text="@string/dialog_go_to_longitude_text"
            android:layout_column="0"
            android:layout_row="2" />
        <TextView
            android:id="@+id/dialog_image_coord_lon"
            android:layout_column="1"
            android:layout_row="2" />

        <!-- Source Type -->
        <TextView
            android:text="@string/dialog_image_source_type"
            android:layout_column="0"
            android:layout_row="3" />
        <TextView
            android:id="@+id/dialog_image_source_type"
            android:layout_column="1"
            android:layout_row="3" />

        <!-- Sender ID -->
        <TextView
            android:text="@string/dialog_image_sender_id"
            android:layout_column="0"
            android:layout_row="4" />
        <TextView
            android:id="@+id/dialog_image_sender_id"
            android:layout_column="1"
            android:layout_row="4" />

    </GridLayout>

</LinearLayout>